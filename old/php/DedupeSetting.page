function parse_json_cfg($plugin)
{
    global $docroot;
    $ram = "$docroot/plugins/$plugin/default.json";
    $rom = "/boot/config/plugins/$plugin/{$plugin}.json";
    if (!file_exists($rom)) {
        copy($ram, $rom);
    }
    return json_decode(file_get_contents($rom), true);
}

